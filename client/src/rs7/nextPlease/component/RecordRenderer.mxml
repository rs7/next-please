<?xml version="1.0"?>
<s:ItemRenderer
    xmlns:component="rs7.nextPlease.component.*"
    xmlns:fx="http://ns.adobe.com/mxml/2009"
    xmlns:s="library://ns.adobe.com/flex/spark"
>
    <s:layout>
        <s:VerticalLayout/>
    </s:layout>
    
    <component:UserItemRenderer data="{listItem.user}"/>
    <s:Label text="{dateTimeFormatter.format(listItem.date)}"/>
    
    <fx:Declarations>
        <s:DateTimeFormatter id="dateTimeFormatter" dateTimePattern="dd.MM.yyyy hh:mm:ss"/>
    </fx:Declarations>
    
    <fx:Script>
        <![CDATA[
            import rs7.nextPlease.entity.Record;

            [Bindable("dataChange")]
            public function get listItem():Record
            {
                return Record(data);
            }
        ]]>
    </fx:Script>
</s:ItemRenderer>
