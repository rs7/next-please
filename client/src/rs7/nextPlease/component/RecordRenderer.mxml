<?xml version="1.0"?>
<s:ItemRenderer
    xmlns:fx="http://ns.adobe.com/mxml/2009"
    xmlns:s="library://ns.adobe.com/flex/spark"
>
    <s:HGroup>
        <s:Image source="{record.user.photoURL}"/>
        <s:VGroup>
            <s:Label text="{record.user.name}"/>
            <s:Label text="{dateTimeFormatter.format(record.date)}"/>
        </s:VGroup>
    </s:HGroup>
    
    <fx:Declarations>
        <s:DateTimeFormatter id="dateTimeFormatter" dateTimePattern="dd.MM.yyyy hh:mm:ss"/>
    </fx:Declarations>
    
    <fx:Script>
        <![CDATA[
            import rs7.nextPlease.entity.Record;

            [Bindable("dataChange")]
            public function get record():Record
            {
                return Record(data);
            }
        ]]>
    </fx:Script>
</s:ItemRenderer>
